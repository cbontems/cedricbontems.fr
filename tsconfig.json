{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "~config": ["src/site.config.ts"],
      "~/*": ["src/*"]
    },
    "strictNullChecks": true,
    "types": ["bun-types"],
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules", "dist", "public"],
  "include": ["**/*", ".eslintrc.cjs"]
}
