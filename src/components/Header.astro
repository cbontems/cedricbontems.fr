---
import HeaderSup from "~/components/HeaderSup.astro";
import HeaderSub from "~/components/HeaderSub.astro";
---

<header role="banner">
	<HeaderSup />
	<HeaderSub />
</header>

<style>
	@import "open-props/media" layer(base.media);
	@layer component {
		header {
			position: relative;
			isolation: isolate;
			grid-area: header;
			display: flex;
			flex-direction: column;
			background-color: var(--text-1);
			z-index: 1;
			:global([data-theme="dark"]) & {
				background-color: var(--surface-2);
			}
		}
	}
</style>
